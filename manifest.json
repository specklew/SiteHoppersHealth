{
    "manifest_version": 2,
    "name": "SiteHoppersHealth",
    "version": "0.1",

    "icons": {"128": "images/128_icon.png"},

    "description": "A pet that motivates you to abandon distractions once for all!",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon" : "images/icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "declarativeContent",
        "tabs",
        "storage"]
}